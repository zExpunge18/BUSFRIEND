<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/busfriend"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".ads_section"></activity>
        <activity android:name=".transportReceipt" />
        <activity android:name=".transportPayment" />
        <activity android:name=".userSchedule" />
        <activity android:name=".transportListDetails" />
        <activity
            android:name=".transportList"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".accountConst"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".index"
            android:label="@string/title_activity_index"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".register"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".loadConst"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>